<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/txt_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/update_application"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_larg" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.6"
            android:background="@color/md_grey_400" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="5dp"
            android:minHeight="160dp"
            android:text="@string/update_description"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_medium"
            android:layout_marginTop="@dimen/space_half"
            android:layout_marginBottom="@dimen/space_half"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_quarter"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:text="@string/no_thanks"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_quarter"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.6"
            android:background="@color/md_grey_400" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:layout_marginBottom="@dimen/space">

            <ImageView
                android:id="@+id/img_cafeBazar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/logo_dl_cafebazaar_en" />

            <ImageView
                android:id="@+id/img_googlePlay"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_dl_google_play_en" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space"
    tools:context=".activity.UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_application"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/textSize_larg" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space"
        android:layout_weight="1"
        android:background="@color/md_grey_100"
        android:padding="@dimen/space_half"
        android:textColor="@color/md_grey_700"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/textSize_small" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_quarter"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9CDFC166"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_quarter">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="@dimen/space_quarter_half"
                    android:tint="@color/md_grey_500"
                    app:srcCompat="@drawable/ic_danger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_quarter"
                    android:layout_marginRight="@dimen/space_quarter"
                    android:text="@string/message_delete_app"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/textSize_medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_appLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_quarter"
                android:layout_marginRight="@dimen/space_quarter"
                android:autoLink="web"
                android:gravity="left"
                android:fontFamily="sans-serif"
                android:padding="@dimen/space_half"
                android:textSize="@dimen/textSize_medium" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:progress="0"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lnr_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginBottom="@dimen/space_half"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20dp"
            android:text="0"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/textSize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_quarter"
            android:text="/ 100%"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/textSize_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/textSize_small" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:fontFamily="sans-serif"
        android:text="بروزرسانی" />

</LinearLayout>
